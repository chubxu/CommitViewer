{
	"manifest_version": 3,
	"name": "Github Commit Viewer",
	"version": "1.0.0",
	"description": "按照时间维度观察Github repo的Commit分布",
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"action": {
		"default_icon": "img/icon-16.png",
		"default_popup": "popup.html",
		"default_title": ""
	},
	"content_scripts": [
		{
			"matches": ["https://github.com/*"],
			"js": [
				"js/jquery-3.6.4.min.js",
				"js/moment.min.js",
				"js/echarts-5.4.1.min.js",
				"js/msg-type-constants.js",
				"js/daterangepicker.js",
				"js/content-script.js"
			],
			"css": [
				"css/content.css",
				"css/base.css",
				"css/bootstrap.4.1.0.min.css",
				"css/daterangepicker.css"
			],
			"run_at": "document_end"
		}
	],
	"host_permissions": [
		"http://*/*", 
		"https://*/*"
	],
	"permissions": ["tabs"],
	"homepage_url": "https://github.com/chubxu/CommitViewer",
	"default_locale": "zh_CN"
}